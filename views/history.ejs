<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>교정 이력 - 굿플랜트</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      * {
        font-family: "Noto Sans KR", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- 네비게이션 바 -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <span class="text-xl font-bold text-gray-800">굿플랜트</span>
            </a>
          </div>
          <div class="flex space-x-4">
            <a href="/login" class="text-gray-600 hover:text-gray-900"
              >로그인</a
            >
            <a href="/register" class="text-gray-600 hover:text-gray-900"
              >회원가입</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- 교정 이력 섹션 -->
    <div class="max-w-7xl mx-auto px-4 py-6">
      <div class="bg-white shadow rounded-lg p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold text-gray-900">교정 이력</h1>

          <!-- 필터 버튼 -->
          <div class="flex space-x-2">
            <button
              id="all-btn"
              class="px-4 py-2 bg-blue-600 text-white rounded-md"
            >
              전체
            </button>
            <button
              id="spelling-btn"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md"
            >
              맞춤법
            </button>
            <button
              id="pronunciation-btn"
              class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md"
            >
              발음
            </button>
          </div>
        </div>

        <!-- 교정 이력 목록 -->
        <div class="space-y-6">
          <!-- 각 교정 항목 -->
          <div class="border rounded-lg p-4 hover:bg-gray-50">
            <div class="flex justify-between items-start mb-2">
              <div>
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800"
                >
                  맞춤법
                </span>
                <span class="text-sm text-gray-500 ml-2">2024-01-15 14:30</span>
              </div>
              <button class="text-gray-400 hover:text-gray-500">
                <i class="fas fa-trash"></i>
              </button>
            </div>
            <div class="text-sm text-gray-600 mb-2">
              원문: 안녕하세요, 반갑습니다.
            </div>
            <div class="text-sm text-blue-600">
              교정: 안녕하세요, 반갑습니다.
            </div>
          </div>

          <div class="border rounded-lg p-4 hover:bg-gray-50">
            <div class="flex justify-between items-start mb-2">
              <div>
                <span
                  class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"
                >
                  발음
                </span>
                <span class="text-sm text-gray-500 ml-2">2024-01-15 13:20</span>
              </div>
              <button class="text-gray-400 hover:text-gray-500">
                <i class="fas fa-trash"></i>
              </button>
            </div>
            <div class="mb-2">
              <audio controls class="w-full">
                <source src="/audio/example.mp3" type="audio/mp3" />
              </audio>
            </div>
            <div class="text-sm text-gray-600">정확도: 85%</div>
          </div>
        </div>

        <!-- 페이지네이션 -->
        <div class="flex justify-center mt-6">
          <nav
            class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
          >
            <a
              href="#"
              class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
            >
              이전
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600"
            >
              1
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              2
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50"
            >
              3
            </a>
            <a
              href="#"
              class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50"
            >
              다음
            </a>
          </nav>
        </div>
      </div>
    </div>

    <script>
      // 필터 버튼 동작
      const buttons = ["all-btn", "spelling-btn", "pronunciation-btn"];
      buttons.forEach((btnId) => {
        document.getElementById(btnId).addEventListener("click", () => {
          // 모든 버튼 스타일 초기화
          buttons.forEach((id) => {
            const btn = document.getElementById(id);
            btn.classList.remove("bg-blue-600", "text-white");
            btn.classList.add("bg-gray-200", "text-gray-700");
          });

          // 클릭된 버튼 스타일 변경
          const clickedBtn = document.getElementById(btnId);
          clickedBtn.classList.remove("bg-gray-200", "text-gray-700");
          clickedBtn.classList.add("bg-blue-600", "text-white");

          // API 호출하여 필터링된 결과 가져오기
          fetchHistory(btnId.split("-")[0]); // 'all', 'spelling', 'pronunciation'
        });
      });

      async function fetchHistory(type) {
        try {
          const response = await axios.get(`/api/history?type=${type}`);
          // 결과 처리 로직
        } catch (error) {
          console.error("History fetch error:", error);
        }
      }

      // 삭제 기능
      document.querySelectorAll(".fa-trash").forEach((btn) => {
        btn.addEventListener("click", async function () {
          if (confirm("이 기록을 삭제하시겠습니까?")) {
            const historyId = this.closest(".border").dataset.id;
            try {
              await axios.delete(`/api/history/${historyId}`);
              this.closest(".border").remove();
            } catch (error) {
              console.error("Delete error:", error);
              alert("삭제 중 오류가 발생했습니다.");
            }
          }
        });
      });
    </script>
  </body>
</html>
