<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>맞춤법 검사 - 굿플랜트</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      * {
        font-family: "Noto Sans KR", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50">
    <!-- 네비게이션 바 -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <a href="/" class="flex items-center">
              <span class="text-xl font-bold text-gray-800">굿플랜트</span>
            </a>
          </div>
          <div class="flex space-x-4">
            <a href="/login" class="text-gray-600 hover:text-gray-900"
              >로그인</a
            >
            <a href="/register" class="text-gray-600 hover:text-gray-900"
              >회원가입</a
            >
          </div>
        </div>
      </div>
    </nav>

    <!-- 맞춤법 검사 섹션 -->
    <div class="max-w-4xl mx-auto px-4 py-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-6">맞춤법 검사</h1>

      <div class="bg-white shadow rounded-lg p-6">
        <!-- 텍스트 입력 섹션 -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">
            검사할 내용을 입력하세요
          </label>
          <textarea
            id="text-input"
            rows="10"
            class="shadow-sm focus:ring-blue-500 focus:border-blue-500 mt-1 block w-full sm:text-sm border border-gray-300 rounded-md p-2"
            placeholder="맞춤법을 검사할 텍스트를 입력하세요..."
          ></textarea>
        </div>

        <!-- 검사 버튼 -->
        <div class="flex justify-end">
          <button
            type="button"
            id="check-button"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            맞춤법 검사하기
          </button>
        </div>
      </div>

      <!-- 결과 섹션 -->
      <div
        id="result-section"
        class="mt-6 bg-white shadow rounded-lg p-6 hidden"
      >
        <h2 class="text-lg font-medium text-gray-900 mb-4">검사 결과</h2>
        <div id="result-content" class="space-y-4">
          <!-- 결과가 여기에 표시됩니다 -->
        </div>
      </div>
    </div>

    <script>
      document
        .getElementById("check-button")
        .addEventListener("click", async () => {
          const textInput = document.getElementById("text-input").value;
          const resultSection = document.getElementById("result-section");
          const resultContent = document.getElementById("result-content");

          if (!textInput.trim()) {
            alert("검사할 텍스트를 입력해주세요.");
            return;
          }

          try {
            // 로딩 상태 표시
            resultContent.innerHTML =
              '<div class="text-center"><i class="fas fa-spinner fa-spin"></i> 검사중...</div>';
            resultSection.classList.remove("hidden");

            const response = await axios.post("/api/check-spelling", {
              text: textInput,
            });

            if (response.data.success) {
              resultContent.innerHTML = response.data.corrections
                .map(
                  (correction) => `
                    <div class="border-b border-gray-200 pb-4">
                        <div class="text-red-500 line-through">${correction.original}</div>
                        <div class="text-green-500">${correction.corrected}</div>
                        <div class="text-sm text-gray-500 mt-1">${correction.explanation}</div>
                    </div>
                `
                )
                .join("");
            } else {
              throw new Error(response.data.message);
            }
          } catch (error) {
            console.error("Spelling check error:", error);
            resultContent.innerHTML = `
                <div class="text-red-500">
                    오류가 발생했습니다. 다시 시도해주세요.
                </div>
            `;
          }
        });
    </script>
  </body>
</html>
