<div class="py-8">
  <div class="max-w-4xl mx-auto px-4">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">공지사항</h1>
    </div>

    <% if (!notices || notices.length === 0) { %>
    <div class="bg-white rounded-lg shadow-md p-6 text-center">
      <p class="text-gray-500">등록된 공지사항이 없습니다.</p>
    </div>
    <% } else { %>
    <!-- 공지사항 목록 -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <% notices.forEach((notice, index) => { %>
        <a href="/notice/<%= notice.id %>">
          <div
            class="border-b border-gray-200 p-6 <%= notice.pin ? 'bg-blue-50' : '' %>"
          >
            <div class="flex items-center mb-4">
              <% if (notice.pin) { %>
              <span class="text-red-500 font-semibold mr-2">[공지]</span>
              <% } %>
              <h2 class="text-xl font-bold text-gray-900"><%= notice.title %></h2>
            </div>
            <div class="flex items-center text-sm text-gray-500">
              <span class="mr-4"><%= notice.userName || '관리자' %></span>
              <span><%= new Date(notice.created_at).toLocaleDateString() %></span>
            </div>
            <div class="mt-4 prose max-w-none">
              <p class="text-gray-700 leading-relaxed whitespace-pre-line">
                <%= notice.content %>
              </p>
            </div>
          </div>
        </a>
      <% }); %>
    </div>
    <% } %>

    <!-- 홈으로 이동 버튼 -->
    <div class="mt-8 flex justify-center">
      <a
        href="/"
        class="inline-flex items-center px-6 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700"
      >
        홈으로
      </a>
    </div>
  </div>
</div>
